{
  "name": "rescript-static",
  "private": true,
  "scripts": {
    "postinstall": "npm run re:build",
    "re:build": "bsb -make-world -clean-world",
    "re:watch": "bsb -make-world -clean-world -w",
    "blog:build": "node scripts/build -- ./docs",
    "blog:serve": "node scripts/serve -- ./docs",
    "blog:watch": "watch 'npm run blog:build -s' ./content ./src ./static",
    "dev": "npm run blog:serve & npm run blog:watch"
  },
  "dependencies": {
    "browser-sync": "^2.26.13",
    "bs-platform": "^8.4.2",
    "copyfiles": "^2.4.1",
    "front-matter": "^3.0.2",
    "glob": "^7.1.6",
    "highlight.js": "^10.4.1",
    "linkify-it": "^3.0.2",
    "markdown-it": "^10.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reason-react": "^0.9.1",
    "rimraf": "^3.0.0",
    "watch": "^1.0.2",
    "yargs": "^16.2.0"
  }
}
